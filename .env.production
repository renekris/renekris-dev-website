# Production Environment Configuration
ENVIRONMENT=production
DOMAIN=renekris.dev
EXTRA_HOSTS= || Host(`www.renekris.dev`)

# Resource Allocation
REPLICAS=2
CPU_LIMIT=0.8
CPU_RESERVE=0.2
MEMORY_LIMIT=512M
MEMORY_RESERVE=256M
MAX_PER_NODE=2

# Node.js Settings
MAX_MEMORY=512
THREAD_POOL=4
LOG_LEVEL=info

# Storage
TMP_SIZE=128m
CACHE_SIZE=64m

# Health Check
HEALTH_INTERVAL=30s
HEALTH_TIMEOUT=10s
HEALTH_RETRIES=2
HEALTH_START=30s

# Update Strategy
UPDATE_DELAY=60s
UPDATE_MONITOR=120s
RESTART_ATTEMPTS=5
RESTART_WINDOW=300s

# Traefik
MIDDLEWARES=prod-security@file
PRIORITY=10
STICKY_SESSIONS=true

# Monitoring
ENABLE_METRICS=true