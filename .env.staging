# Staging Environment Configuration
ENVIRONMENT=staging
DOMAIN=staging.renekris.dev
EXTRA_HOSTS=

# Resource Allocation (Lower than production)
REPLICAS=1
CPU_LIMIT=0.4
CPU_RESERVE=0.1
MEMORY_LIMIT=256M
MEMORY_RESERVE=128M
MAX_PER_NODE=10

# Node.js Settings
MAX_MEMORY=256
THREAD_POOL=2
LOG_LEVEL=debug

# Storage
TMP_SIZE=64m
CACHE_SIZE=32m

# Health Check (Faster for testing)
HEALTH_INTERVAL=30s
HEALTH_TIMEOUT=10s
HEALTH_RETRIES=2
HEALTH_START=10s

# Update Strategy (Faster for testing)
UPDATE_DELAY=10s
UPDATE_MONITOR=60s
RESTART_ATTEMPTS=3
RESTART_WINDOW=120s

# Traefik (No middleware for staging)
MIDDLEWARES=
PRIORITY=10
STICKY_SESSIONS=false

# Monitoring
ENABLE_METRICS=false